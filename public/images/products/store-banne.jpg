<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg-store" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#F7FAFC" />
      <stop offset="100%" style="stop-color:#EDF2F7" />
    </linearGradient>
  </defs>
  <rect width="400" height="300" fill="url(#bg-store)"/>
  
  <!-- Mur de la maison -->
  <rect x="50" y="60" width="20" height="180" fill="#CBD5E0"/>
  
  <!-- Coffre du store -->
  <rect x="70" y="80" width="200" height="20" fill="#1A202C" rx="10"/>
  
  <!-- Toile du store déployée -->
  <rect x="70" y="100" width="200" height="80" fill="#3182CE" opacity="0.8"/>
  
  <!-- Rayures de la toile -->
  <rect x="70" y="110" width="200" height="8" fill="#F6AD55" opacity="0.7"/>
  <rect x="70" y="130" width="200" height="8" fill="#F6AD55" opacity="0.7"/>
  <rect x="70" y="150" width="200" height="8" fill="#F6AD55" opacity="0.7"/>
  <rect x="70" y="170" width="200" height="8" fill="#F6AD55" opacity="0.7"/>
  
  <!-- Bras du store -->
  <line x1="80" y1="100" x2="90" y2="180" stroke="#1A202C" stroke-width="3"/>
  <line x1="260" y1="100" x2="250" y2="180" stroke="#1A202C" stroke-width="3"/>
  
  <!-- Barre de charge -->
  <rect x="85" y="175" width="170" height="8" fill="#1A202C" rx="4"/>
  
  <!-- Motorisation -->
  <rect x="280" y="85" width="30" height="15" fill="#F6AD55" rx="3"/>
  <circle cx="295" cy="92" r="3" fill="#1A202C"/>
  
  <!-- Télécommande -->
  <rect x="320" y="200" width="30" height="20" fill="#3182CE" rx="5"/>
  <circle cx="330" cy="207" r="2" fill="#F6AD55"/>
  <circle cx="340" cy="207" r="2" fill="#F6AD55"/>
  <circle cx="335" cy="215" r="2" fill="#F6AD55"/>
  
  <!-- Titre produit -->
  <text x="200" y="270" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="#1A202C">
    Store Banne Motorisé
  </text>
  <text x="200" y="290" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#4A5568">
    Protection Solaire Élégante
  </text>
</svg> 