<svg width="1200" height="800" viewBox="0 0 1200 800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg-hero-garage" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2D3748" />
      <stop offset="50%" style="stop-color:#4A5568" />
      <stop offset="100%" style="stop-color:#1A202C" />
    </linearGradient>
    <radialGradient id="light-effect" cx="30%" cy="40%" r="60%">
      <stop offset="0%" style="stop-color:#F6AD55;stop-opacity:0.3" />
      <stop offset="70%" style="stop-color:#3182CE;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#1A202C;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Arrière-plan principal -->
  <rect width="1200" height="800" fill="url(#bg-hero-garage)"/>
  <rect width="1200" height="800" fill="url(#light-effect)"/>
  
  <!-- Garage structure -->
  <rect x="200" y="300" width="800" height="400" fill="#2D3748" stroke="#F6AD55" stroke-width="3"/>
  
  <!-- Porte sectionnelle principale (fermée) -->
  <rect x="220" y="320" width="360" height="360" fill="#3182CE" stroke="#F6AD55" stroke-width="2" rx="8"/>
  
  <!-- Sections de la porte -->
  <rect x="230" y="330" width="340" height="80" fill="#E2E8F0" stroke="#F6AD55" stroke-width="1"/>
  <rect x="230" y="420" width="340" height="80" fill="#E2E8F0" stroke="#F6AD55" stroke-width="1"/>
  <rect x="230" y="510" width="340" height="80" fill="#E2E8F0" stroke="#F6AD55" stroke-width="1"/>
  <rect x="230" y="600" width="340" height="70" fill="#E2E8F0" stroke="#F6AD55" stroke-width="1"/>
  
  <!-- Porte enroulement (à droite) -->
  <rect x="620" y="320" width="360" height="360" fill="#1A202C" stroke="#F6AD55" stroke-width="2" rx="8"/>
  
  <!-- Caisson d'enroulement -->
  <rect x="630" y="310" width="340" height="30" fill="#3182CE" rx="15"/>
  <circle cx="800" cy="325" r="10" fill="#F6AD55"/>
  
  <!-- Lames du rideau -->
  <line x1="630" y1="350" x2="970" y2="350" stroke="#F6AD55" stroke-width="2"/>
  <line x1="630" y1="370" x2="970" y2="370" stroke="#F6AD55" stroke-width="2"/>
  <line x1="630" y1="390" x2="970" y2="390" stroke="#F6AD55" stroke-width="2"/>
  <line x1="630" y1="410" x2="970" y2="410" stroke="#F6AD55" stroke-width="2"/>
  <line x1="630" y1="430" x2="970" y2="430" stroke="#F6AD55" stroke-width="2"/>
  
  <!-- Motorisation -->
  <rect x="1020" y="350" width="80" height="60" fill="#F6AD55" rx="8"/>
  <circle cx="1060" cy="380" r="20" fill="#1A202C"/>
  <text x="1060" y="385" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" font-weight="bold" fill="#F6AD55">M</text>
  
  <!-- Télécommande -->
  <rect x="120" y="450" width="60" height="40" fill="#3182CE" rx="8"/>
  <circle cx="140" cy="465" r="4" fill="#F6AD55"/>
  <circle cx="160" cy="465" r="4" fill="#F6AD55"/>
  <circle cx="150" cy="480" r="4" fill="#F6AD55"/>
  
  <!-- Indicateurs d'isolation (bulles) -->
  <circle cx="300" cy="370" r="3" fill="#F6AD55"/>
  <circle cx="320" cy="370" r="3" fill="#F6AD55"/>
  <circle cx="340" cy="370" r="3" fill="#F6AD55"/>
  <circle cx="360" cy="370" r="3" fill="#F6AD55"/>
  <circle cx="380" cy="370" r="3" fill="#F6AD55"/>
  
  <!-- Éléments décoratifs tech -->
  <circle cx="100" cy="200" r="40" fill="none" stroke="#3182CE" stroke-width="2" opacity="0.5"/>
  <circle cx="1100" cy="150" r="60" fill="none" stroke="#F6AD55" stroke-width="2" opacity="0.3"/>
  <circle cx="1050" cy="650" r="50" fill="none" stroke="#3182CE" stroke-width="2" opacity="0.4"/>
  
  <!-- Lignes de perspective -->
  <line x1="0" y1="700" x2="1200" y2="700" stroke="#F6AD55" stroke-width="1" opacity="0.3"/>
  <line x1="200" y1="300" x2="0" y2="100" stroke="#3182CE" stroke-width="1" opacity="0.2"/>
  <line x1="1000" y1="300" x2="1200" y2="100" stroke="#3182CE" stroke-width="1" opacity="0.2"/>
</svg> 